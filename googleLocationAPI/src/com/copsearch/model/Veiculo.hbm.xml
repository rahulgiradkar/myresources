<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 1.1//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>    
   <query name="com.copsearch.model.Veiculo.buscaAll">	
	select v
	from com.copsearch.model.Veiculo v
	where v.localizacao.id = 1
    </query>  
    <!-- where v.localizacao.id = 1	 -->    
</hibernate-mapping>