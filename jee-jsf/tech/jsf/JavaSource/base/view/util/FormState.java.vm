	public static final String STATE_EDIT = "editar";
	public static final String STATE_SEARCH = "pesquisar";
	public static final String STATE_SEARCH_RESULT = "resultadoPesquisa";

	// Definicao do estado inicial da pagina
	private String currentState = STATE_ADD;

	/** [inicio] Getters and Setters* */
	public String getCurrentState() {
		return currentState;
	}

