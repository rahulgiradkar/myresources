	/** [inicio] Verificacao do estado das Paginas * */

	// novo registro
	public boolean isEstadoAdiciona() {
		String estadoAtual = this.getCurrentState();
		return (estadoAtual == null || STATE_ADD.equals(estadoAtual));
	}

	// edita registro
	public boolean isEstadoEdita() {
		return STATE_EDIT.equals(this.getCurrentState());
	}

	// pesquisa registro
	public boolean isEstadoPesquisa() {
		return STATE_SEARCH.equals(this.getCurrentState());
	}

	// resultado pesquisa
	public boolean isEstadoResultadoPesquisa() {
		return STATE_SEARCH_RESULT.equals(this.getCurrentState());
	}

